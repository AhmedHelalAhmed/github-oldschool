{
  "manifest_version": 2,
  "name": "MakeGithubGreatAgain",
  "version": "1.2.0",
  "description": "Extension to make GitHub great again!.",
  "icons": {
    "16": "assets/icon_16.png",
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },
  "browser_action": {
    "default_icon": "assets/icon_16.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*",
        "*://*.github.com/*"
      ],
      "js": [
        "src/content_script.js"
      ],
      "run_at": "document_start"
    }
  ]
}
